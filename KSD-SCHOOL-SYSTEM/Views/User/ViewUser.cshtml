@*----------------------------------------------------------Create Insert PopUp Form----------------------------------------------------------*@
<div class="modal fade" id="idFormUser" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="need-novalidate-new" novalidate>
                    <div class="row">
                        <div class="col-sm-6">
                            User Code
                            <input id="txtUserCode" type="text" class="form-control" required />
                            <div class="invalid-feedback">please enter user code</div>
                            Full Name
                            <input id="txtFullName" type="text" class="form-control" required />
                            <div class="invalid-feedback">please enter full name</div>
                            Employee Code
                            <input id="txtEmployeeCode" type="text" class="form-control" />
                            Branch
                            <select class="form-control" id="ddlBranch"></select>
                            <div class="invalid-feedback">please select branch</div>
                        </div>
                        <div class="col-sm-6">
                            Password
                            <input id="txtPassword" type="text" class="form-control" value="abc123" readonly />
                            Role
                            <select class="form-control" id="ddlRole">
                                <option value="A">Admin</option>
                                <option value="U" selected>User</option>
                            </select>
                            Lock
                            <select class="form-control" id="ddlLock" disabled>
                                <option value="Y">Yes</option>
                                <option value="N" selected>No</option>
                            </select>
                            Status
                            <select class="form-control" id="ddlStatus" disabled>
                                <option value="A" selected>Active</option>
                                <option value="I">Inactive</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
