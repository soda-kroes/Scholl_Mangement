<script type="text/javascript">
    //------------------------------------------------------for call datatable--------------------------------------------------------
    // Call the DataTable default not have data
    // $('#idUserView').DataTable();

    $('#idUserView').DataTable({
        data: Users,
        columns: [
            // { data: "docEntry" },
            {
                render: function (data, type, full, meta) { return meta.row + 1; }//for show auto increment id
            },
            { data: "userCode" },
            { data: "fullName" },
            { data: "empCode" },
            { data: "password" },
            { data: "branch" },
            { data: "role" },
            { data: "locked" },
            { data: "status" },
            {
                render: function (data, type, full, meta) {
                    return '<a href="#" onclick="remove(' + full.docEntry + ')"><i class="fas fa-trash"></i></a>'
                }
            }
        ]

    });



    var table = $('#idUserView').DataTable();
    var Users = [];
    function getData() {
        $.ajax({
            url: '@Url.Action("GetUser","User")',
            type: "GET",
            dataType: "JSON",
            success: function (data) {
                if (data.errCode == 0) {
                    Users = [];
                    Users = data.users;


                    table.clear();
                    table.rows.add(Users);
                    table.draw();
                } else {
                    $('#msg').text(data.errMsg);
                }
            }
        });
    }
    //------------------------------------------------------for call datatable--------------------------------------------------------


    // Hold screen to validation
    var form = document.getElementsByClassName('need-novalidate-new');
    var validation = Array.prototype.filter.call(form, function (forms) {
        forms.addEventListener('submit', function (event) {
            if (forms.checkValidity() == false) {
                event.preventDefault();
            }
            else {
                event.preventDefault();
                var obj = {};
                obj.UserCode = $('#txtUserCode').val();
                obj.FullName = $('#txtFullName').val();
                obj.EmpCode = $('#txtEmployeeCode').val();
                obj.Branch = $('#ddlBranch').val();
                obj.Role = $('#ddlRole').val();

                $('#idFormUser').modal('hide');
                $('#idLoading').modal('show');

                $.ajax({
                    url: '@Url.Action("PostUser","User")',
                    type: "POST",
                    dataType: "JSON",//OK
                    data: { user: obj },
                    success: function (data) {
                        if (data.errCode == 0) {

                            setTimeout(function () {
                                $('#idLoading').modal('hide');

                            }, 2000);// Delay modal

                            setTimeout(function () {
                                //alert(data.errMsg);
                                $('#idLoadingSucess').modal('show');
                                $('#msgSuccess').text(data.errMsg);
                                getData();
                            }, 2020);// Delay message


                        } else {
                            setTimeout(function () {
                                $('#idLoading').modal('hide');
                            }, 2000);// Delay modal

                            setTimeout(function () {
                                $('#idLoadingError').modal('show');
                                //alert(data.errMsg);
                                $('#msg').text(data.errMsg);
                            }, 2020);// Delay message
                        }
                    },

                });



            }
            forms.classList.add('was-validated');
        }, false);
    });





    //---------------------------------------------------------DELETE FUNCTION---------------------------------------------------------
    function remove(ID) {
        if (confirm("Do you want to delete ? ") == true) {
            //alert(ID);
            $.ajax({
                url: '@Url.Action("DeleteUser","User")',
                type: "GET",
                dataType: "JSON",
                data: { docentry: ID },
                success: function (data) {
                    if (data.errCode == 0) {

                        $('#idLoadingSucess').modal('show');
                        $('#msgSuccess').text(data.errMsg);
                        getData();
                    }
                    else {
                        $('#idLoadingError').modal('show');
                        //alert(data.errMsg);
                        $('#msg').text(data.errMsg);
                    }

                }
            });
        }
    }

    //---------------------------------------------------------DELETE FUNCTION---------------------------------------------------------



    //---------------------------------------------------------UPDATE FUNCTION---------------------------------------------------------
    //i use double click to show update form
    $('#idUserView tbody').on('dblclick', 'tr', function () {
        //use for select row on datatable
        if ($(this).hasClass('select')) {

            $(this).removeClass('select');
        } else {
            table.$('tr.select').removeClass('select');
            $(this).addClass('select');

        }

        var index = table.row('.select').index()
        var data = table.row(index).data();

        //for update
        $('#utxtUserCode').val(data.userCode)
        $('#utxtFullName').val(data.fullName)
        $('#utxtEmployeeCode').val(data.empCode)
        $('#utxtPassword').val(data.password)
        //call branch 
        calBranch(data.branch);
        

        if (data.role == "Admin") $('#uddlRole').val('A')
        else $('#uddlRole').val('U')
        // $('#uddlRole').val(data.role)

        if (data.locked == "No") $('#uddlLock').val('N')
        else $('#uddlLock').val('Y')
        //$('#uddlLock').val(data.locked)

        if (data.status == "Active") $('#uddlStatus').val('A')
        else $('#uddlStatus').val('I')
        //('#uddlStatus').val(data.status)

        if (data.expiredLocked == "Y") {
            $('#btnReset').removeClass("d-none");
        }
        else {
            $('#btnReset').addClass("d-none");
        }
        $('#idFormUser-Update').modal('show');
    })

    var reset = false;
    $('#btnReset').click(function () {
        reset = true;


        if (confirm("Do you want to reset?") == true) {
            $('#idFormUser-Update').modal('hide');
            $('#idLoading').modal('show');

            $.ajax({
                url: '@Url.Action("ResetUser","User")',
                type: "POST",
                dataType: "JSON",//OK
                data: { Usercode: $('#utxtUserCode').val() },
                success: function (data) {
                    if (data.errCode == 0) {

                        setTimeout(function () {
                            $('#idLoading').modal('hide');

                        }, 2000);// Delay modal

                        setTimeout(function () {
                            //alert(data.errMsg);
                            $('#idLoadingSucess').modal('show');
                            $('#msgSuccess').text(data.errMsg);
                            $('#idFormUser-Update').modal('hide');
                            getData();
                        }, 2020);// Delay message


                    } else {
                        setTimeout(function () {
                            $('#idLoading').modal('hide');
                        }, 2000);// Delay modal

                        setTimeout(function () {
                            $('#idLoadingError').modal('show');
                            //alert(data.errMsg);
                            $('#msg').text(data.errMsg);
                        }, 2020);// Delay message
                    }
                },

            });

        }

    })

    $('#btnUpdate').click(function () {
        reset = false;
    })

    // Hold screen to validation
    var form = document.getElementsByClassName('need-novalidate-Update');
    var validation = Array.prototype.filter.call(form, function (forms) {
        forms.addEventListener('submit', function (event) {
            if (forms.checkValidity() == false) {
                event.preventDefault();
            }
            else {
                event.preventDefault();
                if (reset == false) {
                    var obj = {};
                    obj.UserCode = $('#utxtUserCode').val();
                    obj.FullName = $('#utxtFullName').val();
                    obj.EmpCode = $('#utxtEmployeeCode').val();
                    obj.Branch = $('#uddlBranch').val();
                    obj.Role = $('#uddlRole').val();
                    obj.Locked = $('#uddlLock').val();
                    obj.Status = $('#uddlStatus').val();

                    $('#idFormUser').modal('hide');
                    $('#idLoading').modal('show');

                    $.ajax({
                        url: '@Url.Action("UpdateUser","User")',
                        type: "POST",
                        dataType: "JSON",//OK
                        data: { user: obj },
                        success: function (data) {
                            if (data.errCode == 0) {

                                setTimeout(function () {
                                    $('#idLoading').modal('hide');

                                }, 2000);// Delay modal

                                setTimeout(function () {
                                    //alert(data.errMsg);
                                    $('#idLoadingSucess').modal('show');
                                    $('#msgSuccess').text(data.errMsg);
                                    $('#idFormUser-Update').modal('hide');
                                    getData();
                                }, 2020);// Delay message


                            } else {
                                setTimeout(function () {
                                    $('#idLoading').modal('hide');
                                }, 2000);// Delay modal

                                setTimeout(function () {
                                    $('#idLoadingError').modal('show');
                                    //alert(data.errMsg);
                                    $('#msg').text(data.errMsg);
                                }, 2020);// Delay message
                            }
                        },

                    });

                }




            }
            forms.classList.add('was-validated');
        }, false);
    });
    //---------------------------------------------------------UPDATE FUNCTION---------------------------------------------------------



    $(document).ready(function () {
        getData();

        //use for select row on datatable
        $('#idUserView tbody').on('click', 'tr', function () {
            $(this).toggleClass('select');

        });

        //$('#idUserView tbody').on('click', 'tr', function () {
        //    if ($(this).hasClass('select')) {

        //        $(this).removeClass('select');
        //    } else {
        //        table.$('tr.select').removeClass('select');
        //        $(this).addClass('select');

        //    }
        //});

    });



    function calBranch(code){
        $.ajax({
            url: '@Url.Action("GetAllBranch","MasterData")',
            type: "GET",
            dataType: "JSON",
            success: function (data) {
              
                $('#uddlBranch').empty();
                for (var i = 0; i < data.branchs.length; i++) {
                   
                    $('#uddlBranch').append(new Option(data.branchs[i].branchName, data.branchs[i].branchCode));
                }
                alert(code);
                $('#uddlBranch').val(code);
            }
        })

    }

    function GETBRANCH(){
        $.ajax({
            url: '@Url.Action("GetAllBranch","MasterData")',
            type: "GET",
            dataType: "JSON",
            success: function (data) {
                $('#ddlBranch').empty();

                for (var i = 0; i < data.branchs.length; i++) {
                    $('#ddlBranch').append(new Option(data.branchs[i].branchName, data.branchs[i].branchCode));

                }
            }
        })
    }
   
   
    //call branch 
    GETBRANCH();

    // Event handler for the change event of the dropdown list
    $('#ddlBranch').change(function () {
        var selectedBranch = $(this).val();
        console.log('Selected Branch:', selectedBranch);
       // alert(selectedBranch);
        // You can use the selectedBranch value as needed
    });

  



</script>