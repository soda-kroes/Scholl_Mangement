@*----------------------------------------------------------Create Insert PopUp Form----------------------------------------------------------*@
<div class="modal fade" id="idFormBranch" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Branch</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="need-novalidate-new" novalidate>
                    <div class="row">
                        <div class="col-sm-6">
                            <b>Branch Code</b>
                            <input id="txtBranchCode" type="text" class="form-control" required />
                            <div class="invalid-feedback">please input branch code</div>
                            <br />

                            <b>Branch Name</b>
                            <input id="txtBranchName" type="text" class="form-control" required />
                            <div class="invalid-feedback">please input branch name</div>
                            <br />

                            <b>Address</b>
                            <textarea id="txtAddress" class="form-control" row="3" required></textarea>
                            <div class="invalid-feedback">please input address</div>
                        </div>
                        <div class="col-sm-6">

                            <b>Tax Code</b>
                            <input id="txtTaxCode" type="text" class="form-control" required />
                            <div class="invalid-feedback">please input Tax Code</div>
                            <br />

                            <b>Tax Per</b>
                            <input id="txtTaxPer" type="text" class="form-control" required />
                            <div class="invalid-feedback">please input Tax Code</div>
                            <br />
                           
                            <b>Status</b>
                            <select class="form-control" id="ddlStatus">
                                <option value="I">Inactive</option>
                                <option value="A" selected>Active</option>
                            </select>
                          
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@*----------------------------------------------------------Create Insert PopUp Form----------------------------------------------------------*@

@*----------------------------------------------------------Create Update PopUp Form----------------------------------------------------------*@
<div class="modal fade" id="idFormBranchUpdate" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Branch</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="need-novalidate-new-Update" novalidate>
                    <div class="row">
                        <div class="col-sm-6">
                            <b>Branch Code</b>
                            <input id="utxtBranchCode" type="text" class="form-control"  readonly/>
                            <br />

                            <b>Branch Name</b>
                            <input id="branchNameu" type="text" class="form-control"  />
                            <br />

                            <b>Address</b>
                            <textarea id="utxtAddress" class="form-control" row="3" ></textarea>
                        </div>
                        <div class="col-sm-6">

