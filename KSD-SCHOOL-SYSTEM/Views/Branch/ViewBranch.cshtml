<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h5><i class="fas fa-home"></i>Home <i class="fas fa-arrow-right"></i> User <i class="fas fa-arrow-right"></i> View Branch</h5>
        </div>
    </div>
    <br />
    <div class="table-responsive">
        <div class="row">
            <div class="col-sm-12">
                <table id="idTableBranch" class="table  table-bordered table-hover" style="width:100%;">
                    <thead style=" background-color:#FBC576">
                        <tr>
                            <th>No</th>
