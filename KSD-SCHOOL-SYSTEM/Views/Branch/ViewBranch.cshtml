                    </thead>
                    <tfoot style=" background-color:#FBC576">
                        <tr>
                           <th>No</th>
                            <th>Branch Code</th>
                            <th>Branch Name</th>
                            <th>Tax Code</th>
                            <th>Tax (%)</th>
                            <th>Address</th>
                            <th>CreateBy</th>
                            <th>CreateDate</th>
