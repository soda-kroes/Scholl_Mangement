<script type="text/javascript">
    //------------------------------------------------------for call datatable--------------------------------------------------------
    // Call the DataTable default not have data
    // $('#idTableLevel').DataTable();

    var brands = [];
    $('#idTableBranch').DataTable({
        data: brands,
        columns: [
            { // Add a column for auto-increment ID
                render: function (data, type, full, meta) {
                    return meta.row + 1;
                }
            },
            { data: "branchCode" },
            { data: "branchName" },
            { data: "taxCode" },
            { data: "taxPer" },
            { data: "address" },
            { data: "createBy" },
            { data: "createDate" },
            { data: "status" },
            {
                render: function (data, type, full, meta) {
                    return '<a href="#" onclick="remove(' + full.docEntry + ')"><i class="fas fa-trash"></i></a>'
                }
            }
        ]
    });

     var table = $('#idTableBranch').DataTable();
 

    function getData() {
        $.ajax({
            url: '@Url.Action("GetAllBranch","Branch")',
            type: "GET",
            dataType: "JSON",
            success: function (data) {
                if (data.errCode == 0) {
                    brands = data.branchs; // Update the levels array with the received data

                    table.clear();
                    table.rows.add(brands);
                    table.draw();
                } else {
                    $('#msg').text(data.errMsg);
                }
            }
        });
    }

      //call function getData
       getData();
    
    // Hold screen to validation
    var form = document.getElementsByClassName('need-novalidate-new');
    var validation = Array.prototype.filter.call(form, function (forms) {
        forms.addEventListener('submit', function (event) {
            if (forms.checkValidity() == false) {
                event.preventDefault();
            }
            else {
                event.preventDefault();

                   var obj = {};
                    obj.BranchCode= $('#txtBranchCode').val();
                    obj.BranchName= $('#txtBranchName').val();
                    obj.TaxCode= $('#txtTaxCode').val();
                    obj.TaxPer= $('#txtTaxPer').val();
                    obj.Address= $('#txtAddress').val();
                    obj.Status = $('#ddlStatus').val()

                    
                $('#idFormBranch').modal('hide');
                $('#idLoading').modal('show');

                $.ajax({
                    url: '@Url.Action("CreateBranch","Branch")',
                    type: "POST",
                    dataType: "JSON",
                    data: {branch: obj},
                    success: function(data){
                        if(data.errCode==0){
                             setTimeout(function () {
                                $('#idLoading').modal('hide');

                            }, 2000);// Delay modal

                             setTimeout(function () {
                                $('#idLoadingSucess').modal('show');
                                $('#msgSuccess').text(data.errMsg);

                                // Reset the form
                                forms.reset();
                                forms.classList.remove('was-validated');

                                //call funcation 
                                getData();
                            }, 2020);// Delay message

                        }
                        else{
                             setTimeout(function () {
                                $('#idLoading').modal('hide');
                            }, 2000);// Delay modal

                             setTimeout(function () {
                                $('#idLoadingError').modal('show');
                                $('#msg').text(data.errMsg);
                            }, 2020);// Delay message
                        }
                    }
                })  
            }
            forms.classList.add('was-validated');
        }, false);
    });


    //-----------------------------------------------------Function Update-----------------------------------------------------
    //i use double click to show update form
    $('#idTableBranch tbody').on('dblclick', 'tr', function () {
        //use for select row on datatable
        if ($(this).hasClass('select')) {

            $(this).removeClass('select');
        } else {
            table.$('tr.select').removeClass('select');
            $(this).addClass('select');

        }

        var index = table.row('.select').index()
        var data = table.row(index).data();

        //Get Data From Table For Update
        $('#utxtBranchCode').val(data.branchCode);
        $('#branchNameu').val(data.branchName);
        $('#utxtTaxCode').val(data.taxCode);
        $('#utxtTaxPer').val(data.taxPer);
        $('#utxtAddress').val(data.address);
        if (data.status == "Active") {
            $('#uddlStatus').val('A')
        }
        else {
            $('#uddlStatus').val('I')
        }

        //For Show Form Update
        $('#idFormBranchUpdate').modal('show');
    })


    // Hold screen to validation
    var form = document.getElementsByClassName('need-novalidate-new-Update');
    var validation = Array.prototype.filter.call(form, function (forms) {
        forms.addEventListener('submit', function (event) {
            if (forms.checkValidity() == false) {
                event.preventDefault();
            }
            else {
                event.preventDefault();

                var obj = {};
                obj.branchCode = $('#utxtBranchCode').val();
                obj.branchName = $('#branchNameu').val();
                obj.taxCode = $('#utxtTaxCode').val();
                obj.taxPer = $('#utxtTaxPer').val();
                obj.address = $('#utxtAddress').val();
                obj.status = $('#uddlStatus').val();
               


                $('#idFormBranchUpdate').modal('hide');
                $('#idLoading').modal('show');

                $.ajax({
                    url: '@Url.Action("UpdateBranch","Branch")',
                    type: "POST",
                    dataType: "JSON",//OK
                    data: { branch: obj },
                    success: function (data) {
                        if (data.errCode == 0) {

                            setTimeout(function () {
                                $('#idLoading').modal('hide');

                            }, 2000);// Delay modal

                            setTimeout(function () {
                                //alert(data.errMsg);
                                $('#idLoadingSucess').modal('show');
                                $('#msgSuccess').text(data.errMsg);
                                $('#idFormBranchUpdate').modal('hide');
                                getData();
                            }, 2020);// Delay message


                        } else {
                            setTimeout(function () {
                                $('#idLoading').modal('hide');
                            }, 2000);// Delay modal

                            setTimeout(function () {
                                $('#idLoadingError').modal('show');
                                //alert(data.errMsg);
                                $('#msg').text(data.errMsg);
                            }, 2020);// Delay message
                        }
                    },

                });






            }
            forms.classList.add('was-validated');
        }, false);
    });


           //-----------------------------------------------------Function Update-----------------------------------------------------


</script>